{% extends "./includes/_layout.twig" %}

{% block content %}
	<!-- out --> 
	<div class="out">

		{% include "./includes/_header.twig" %}
		<!-- l -->
		<div class="l l_cab">
			<div class="l__in">
				<!-- l-col1 -->
				<div class="l-col1">
					{% include "./includes/_nav.twig" %}
				</div>
				<!-- center -->
				<div class="center">
					<!-- wind -->
					<div class="wind is-gray">
						<div class="wind__top">Статус пользователя</div>
						<div class="wind__in">
							<!-- status -->
							<div class="status">
								<div class="status__img">
									<img src="img/svg/anonim.svg" alt="img">
								</div>
								<div class="status__in">
									<div class="status__title"><i class="icon is-green icon-uniD9"></i> Анонимный</div>
									<div class="status__row">
										<span>Максимальный баланс</span>
										<div class="price">15 000 <span class="price__cur">₽</span></div>
									</div>
									<div class="status__row">
										<span>Максимальный оборот</span>
										<div class="price">40 000 <span class="price__cur">₽</span></div>
									</div>
									<div class="status__row">
										<span>Платежи иностранным компаниям</span>
									</div>
									<div class="status__row">
										<span>Переводы другим пользователям</span>
									</div>
									<div class="status__row">
										<span>Вывод средств</span>
									</div>
								</div>
								<div class="status__but">
									<a href="#" class="btn btn_white">Ваш текущий статус</a>
								</div>
							</div>
							<!-- status -->
							<div class="status">
								<div class="status__img">
									<img src="img/svg/personal.svg" alt="img">
								</div>
								<div class="status__in">
									<div class="status__title">Персональный</div>
									<div class="status__row">
										<span>Максимальный баланс</span>
										<div class="price">60 000 <span class="price__cur">₽</span></div>
									</div>
									<div class="status__row">
										<span>Максимальный оборот</span>
										<div class="price">200 000 <span class="price__cur">₽</span></div>
									</div>
									<div class="status__row">
										<span>Платежи иностранным компаниям</span>
									</div>
									<div class="status__row">
										<span>Переводы другим пользователям</span>
									</div>
									<div class="status__row">
										<span>Вывод средств</span>
									</div>
								</div>
								<div class="status__but">
									<a href="#" class="btn btn_blue">Получить статус</a>
								</div>
							</div>
						</div>
					</div>
					<!-- wind -->
					<div class="wind is-gray">
						<div class="wind__top">Мобильный телефон</div>
						<div class="wind__in">
							<!-- save -->
							<div class="save">
								<form action="">
									<div class="save__in">
										<button class="btn" type="submit">Сохранить</button>
										<div class="save__input">
											<input type="text" class="input" placeholder="Введите номер мобильного телефона">
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
					<!-- wind -->
					<div class="wind is-gray">
						<div class="wind__top">Персональные данные</div>
						<div class="wind__in">
							<!-- form -->
							<form action="" class="form">
								<div class="form__row">
									<div class="form__label">
										<label for="town">Город:</label>
									</div>
									<div class="form__right">
										<input type="text" class="input" id="town" placeholder="Например, Москва">
									</div>
								</div>
								<div class="form__row">
									<div class="form__label">
										<label for="date">Дата рождения:</label>
									</div>
									<div class="form__right">
										<div class="form__col">
											<input type="text" class="input" id="date" placeholder="День">
										</div>
										<div class="form__col">
											<input type="text" class="input" placeholder="Месяц">
										</div>
										<div class="form__col">
											<input type="text" class="input" placeholder="Год">
										</div>
									</div>
								</div>
								<div class="form__row">
									<div class="form__label">
										<label for="surname">Фамилия:</label>
									</div>
									<div class="form__right">
										<input type="text" class="input" id="surname" placeholder="Петров">
									</div>
								</div>
								<div class="form__row">
									<div class="form__label">
										<label for="name">Имя:</label>
									</div>
									<div class="form__right">
										<input type="text" class="input" id="name" placeholder="Иннокентий">
									</div>
								</div>
								<div class="form__row">
									<div class="form__label">
										<label for="patronymic">Отчество:</label>
									</div>
									<div class="form__right">
										<input type="text" class="input" id="patronymic" placeholder="Рамзаныч">
									</div>
								</div>
								<div class="form__row">
									<div class="form__label">
										<label for="passport-id">Серия и номер паспорта:</label>
									</div>
									<div class="form__right">
										<input type="text" class="input" id="passport-id" placeholder="Например, 99 99 999999">
									</div>
								</div>
								<div class="form__row">
									<div class="form__label">
										<label for="inn">ИНН:</label>
									</div>
									<div class="form__right">
										<input type="text" class="input" id="inn" placeholder="12 цифр">
									</div>
								</div>
								<div class="form__row">
									<div class="form__label">
										<label for="snils">СНИЛС:</label>
									</div>
									<div class="form__right">
										<input type="text" class="input" id="snils" placeholder="11 цифр">
									</div>
								</div>
								<div class="form__row">
									<div class="form__label">
										<label for="med-policy">№ мед. полиса:</label>
									</div>
									<div class="form__right">
										<input type="text" class="input" id="med-policy" placeholder="Количество цифр зависит от страховой компании">
									</div>
								</div>
								<div class="form__row">
									<div class="form__right">
										<button class="btn" type="button">Сохранить</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
 
	{% include "./includes/_footer.twig" %}

{% endblock %}