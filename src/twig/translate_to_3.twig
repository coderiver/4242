										<option value="item-2" data-image="purse">item-2</option>
										<option value="item-3" data-image="purse">item-3</option>
										<option value="item-4" data-image="purse">item-4</option>
										<option value="item-5" data-image="purse">item-5</option>
									</select>
									<select class="select2 is-to is-image js-select-2">
										<option value="123 123 123 — 10 000 ₽" data-image="purse">123 123 123 — 10 000 ₽</option>
										<option value="item-2" data-image="purse">item-2</option>
										<option value="item-3" data-image="purse">item-3</option>
										<option value="item-4" data-image="purse">item-4</option>
										<option value="item-5" data-image="purse">item-5</option>
									</select>
									<!-- <div class="select is-stat is-to js-select">
										<span class="select__arr"></span>
										<div class="select__text">на</div>
										<div class="select__icon">
											<img src="img/svg/purse.svg" alt="img">
										</div>
										<input type="text" class="input js-input" placeholder="укажите номер кошелька">
										<select>
											<option value="item1">item1</option>
											<option value="item2">item2</option>
											<option value="item3">item3</option>
										</select>			
									</div> -->
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<label for="price">Сумма:</label>
									</div>
									<div class="payment__right">
										<input type="text" class="input" value="10" id="price" placeholder="Минимум — 15, максимум — 15 000">
										<div class="payment__icon"><i class="icon icon-ruble"></i></div>
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<span>Будет списано:</span>
									</div>
									<div class="payment__right">
										<div class="payment__text"><span class="price">60,00 ₽</span>, с учётом комиссии 0,5% (но не менее 50 ₽)</div>
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<span>Будет зачислено:</span>
									</div>
									<div class="payment__right">
										<div class="payment__text"><span class="price">10,00 ₽</span></div>
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<a href="#" class="prev">Назад</a>
									</div>
									<div class="payment__right">
										<button class="btn btn_big" type="sybmit">Продолжить</button>
									</div>
								</div>
							</form>
						</div>
					</div>
					<!-- rightbar -->
					<div class="rightbar">
						<!-- fasten -->
						<div class="fasten">
							<div class="fasten__img">
								<img src="img/svg/between.svg" alt="img">
							</div>
						</div>
						<h4 class="title-small">Частые вопросы:</h4>
						<ul class="list">
							{% for a in list%}
							<li><a href="#">{{a.item}}</a></li>
							{% endfor %}
						</ul>
						<h4 class="title-small">Оплатите также:</h4>
						{% for a in also %}
							<p><a href="#">{{a.item}}</a></p>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>

	</div>
 
	{% include "./includes/_footer.twig" %}

